@model ProfileImageViewModel
@{
    ViewData["Title"] = "Manage Profile Image";
}

<h2>@ViewData["Title"].</h2>
<form asp-controller="Manage" asp-action="UpdateProfileImage" 
    method="post" class="form-horizontal" role="form">
    <h4>Add/Update Profile Image</h4>
    <hr />
    <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="ProfileImage" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ProfileImage" class="form-control" />
            <span asp-validation-for="ProfileImage" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Update</button>
        </div>
    </div>
</form>

<em>NOTE: This will use upload control and save to AWS S3</em>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
